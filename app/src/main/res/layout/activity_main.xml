<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center"
    android:weightSum="5"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    android:orientation="vertical"
    android:gravity="center">

    // IMAGEVIEWs


    <androidx.cardview.widget.CardView
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:cardCornerRadius="250dp"
        app:cardBackgroundColor="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/user"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>



    //EDITTEXTs


    <EditText
        android:id="@+id/usernameEditTextId"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="User Name"
        android:textAlignment="center"
        android:drawableLeft="@drawable/user_white"
        android:textColor="@color/white"
        android:background="@drawable/customborder"/>

    <EditText
        android:id="@+id/passwordEditTextId"
        android:inputType="textPassword"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="Password"
        android:textAlignment="center"
        android:drawableLeft="@drawable/padlock_white"
        android:textColor="@color/white"

        android:background="@drawable/customborder"/>


    //BUTTONs


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButtonId"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:padding="15dp"
        android:drawableLeft="@drawable/login"

        />

    <TextView
        android:id="@+id/signUpHereTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="No account yet? Create one"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <View
        android:layout_marginTop="2dp"
        android:layout_width="185dp"
        android:layout_height="1dp"
        android:background="@color/white" />


</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use other account"
        android:textColor="@color/white"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google"
            />
        <ImageView
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"
            />
        <ImageView
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linkedin"
            />
    </LinearLayout>


</LinearLayout>




</LinearLayout>